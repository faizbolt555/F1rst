import java.util.Scanner;

// 학생 클래스
class Student {
    private int studentId;
    private String name;
    private int[] grades;

    // 생성자
    public Student(int studentId, String name, int[] grades) {
        this.studentId = studentId;
        this.name = name;
        this.grades = grades;
    }

    // 총점 계산 메서드
    public int calculateTotal() {
        int total = 0;
        for (int grade : grades) {
            total += grade;
        }
        return total;
    }

    // 평균 계산 메서드
    public double calculateAverage() {
        return calculateTotal() / (double)grades.length;
    }

    // 게터 메서드
    public int getStudentId() {
        return studentId;
    }

    public String getName() {
        return name;
    }

    public int[] getGrades() {
        return grades;
    }
}

// 메인 클래스
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Student[] students = new Student[3]; // 세 명의 학생 데이터를 저장할 배열

        // 메뉴 출력
        System.out.println("========================================================================");
        System.out.println("|               다음 프로그램 메뉴 중 하나 선택하세요                        |");
        System.out.println("|  1. 입력: 세 학생의 데이터를 입력(학번, 성명, 국어 성적, 영어 성적, 수학 성적) |");
        System.out.println("|  2. 개인별 출력                                                        |");
        System.out.println("|  3. 한 분반 성적 출력                                                   |");
        System.out.println("|  4. 종료                                                              |");
        System.out.println("========================================================================");
        // 번호 입력 받기
        System.out.print("\n번호 입력 => ");
        int choice = scanner.nextInt();
        scanner.nextLine(); // 버퍼 비우기

        // 각 메뉴에 따른 처리
        switch (choice) {
            case 1:
                // 입력 메서드 호출
                inputStudentsData(scanner, students);
                System.out.println("저장하였습니다!");
                break;
            case 2:
                // 개인별 출력 메서드 호출
                break;
            case 3:
                // 학급별 출력 메서드 호출
                break;
            case 4:
                // 종료
                System.out.println("프로그램을 종료합니다.");
                break;
            default:
                System.out.println("올바른 번호를 입력하세요.");
        }
    }

    // 학생 데이터 입력 메서드
    private static void inputStudentsData(Scanner scanner, Student[] students) {
        for (int i = 0; i < students.length; i++) {
            System.out.println((i + 1) + "번째 학생의 데이터를 입력하시오:");
            System.out.print("학번: ");
            int studentId = scanner.nextInt();
            scanner.nextLine(); // 버퍼 비우기
            System.out.print("성명: ");
            String name = scanner.nextLine();
            System.out.print("국어 성적: ");
            int koreanGrade = scanner.nextInt();
            System.out.print("영어 성적: ");
            int englishGrade = scanner.nextInt();
            System.out.print("수학 성적: ");
            int mathGrade = scanner.nextInt();
            int[] grades = {koreanGrade, englishGrade, mathGrade};

            students[i] = new Student(studentId, name, grades);
        }
    }
}
